{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "@webgpu/types"
    ],
    "moduleResolution": "bundler",
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "src/addLightsPanel.js"
  ]
}